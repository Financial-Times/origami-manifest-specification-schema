{
	"$id": "https://origami.ft.com/spec/v1/manifest/schema",
	"type": "object",
	"definitions": {
		"demo-options": {
			"type": "object",
			"properties": {
				"template": {
					"type": "string"
				},
				"sass": {
					"type": "string"
				},
				"js": {
					"type": "string"
				},
				"data": {
					"type": "object"
				},
				"documentClasses": {
					"type": "string"
				},
				"dependencies": {
					"type": "array",
					"items": "string"
				}
			}
		},
		"brands": {
			"type": "array",
			"items": {
				"type": "string",
				"enum": ["master", "internal", "whitelabel"]
			}
		}
	},
	"allOf": [
		{
			"oneOf": [
				{
					"properties": {
						"origamiType": {
							"type": "null"
						}
					}
				},
				{
					"properties": {
						"origamiType": {
							"type": "string",
							"enum": [
								"imageset"
							]
						}
					}
				},
				{
					"required": [
						"origamiCategory"
					],
					"properties": {
						"origamiType": {
							"type": "string",
							"enum": [
								"module"
							]
						},
						"origamiCategory": {
							"type": "string",
							"enum": [
								"components",
								"primitives",
								"utilities",
								"layouts"
							]
						},
						"browserFeatures": {
							"type": "object",
							"properties": {
								"required": {
									"type": "array",
									"items": {
										"type": "string"
									}
								},
								"optional": {
									"type": "array",
									"items": {
										"type": "string"
									}
								}
							}
						}
					}
				},
				{
					"properties": {
						"origamiType": {
							"type": "string",
							"enum": [
								"service"
							]
						}
					},
					"serviceUrl": {
						"type": "string"
					},
					"required": ["serviceUrl"]
				}
			]
		},
		{
			"properties": {
				"description": {
					"type": "string"
				},
				"origamiVersion": {
					"type": "number",
					"enum": [1]
				},
				"brands": {
					"$ref": "#/definitions/brands"
				},
				"keywords": {
					"oneOf": [
						{
							"type": "array",
							"items": {
								"type": "string"
							}
						},
						{
							"type": "string"
						}
					]
				},
				"support": {
					"type": "string",
					"format": "uri"
				},
				"supportStatus": {
					"type": "string",
					"enum": [
						"active",
						"maintained",
						"deprecated",
						"dead",
						"experimental"
					]
				},
				"supportContact": {
					"type": "object",
					"properties": {
						"email": {
							"type": "string",
							"format": "email"
						},
						"slack": {
							"type": "string",
							"pattern": "^[\\w-]+/[\\w-]{1,21}$"
						}
					},
					"required": ["email", "slack"]
				},
				"ci": {},
				"demosDefaults": {
					"$ref": "#/definitions/demo-options"
				},
				"demos": {
					"type": "array",
					"items": {
						"allOf": [
							{"$ref": "#/definitions/demo-options"},
							{
								"properties": {
									"name": {
										"type": "string"
									},
									"title": {
										"type": "string"
									},
									"description": {
										"type": "string"
									},
									"template": {
										"type": "string"
									},
									"brands": {
										"$ref": "#/definitions/brands"
									},
									"hidden": {
										"type": "boolean"
									},
									"display_html": {
										"type": "boolean"
									}
								},
								"required": [
									"template",
									"name",
									"title",
									"description"
								]
							}
						]
					}
				}
			},
			"required": [
				"description",
				"origamiType",
				"origamiVersion",
				"keywords",
				"support",
				"supportStatus"
			]
		}
	]
}
